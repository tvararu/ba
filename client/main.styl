/* CSS declarations go here */
green = #16a085
blue = #2980b9
white = #ecf0f1

*
  box-sizing: border-box
  text-transform: uppercase

html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-size: 24px

body
  background: green
  font-family: Helvetica Neue

h = 3em

.app
  max-width: 480px
  margin: 0 auto
  position: relative

  ul
    list-style-type: none
    padding: 0
    margin: 0

    li:nth-child(5n)
      background: #3498db
    li:nth-child(5n + 1)
      background: #9b59b6
    li:nth-child(5n + 2)
      background: #34495e
    li:nth-child(5n + 3)
      background: #f1c40f
    li:nth-child(5n + 4)
      background: #e67e22


    li
      background: #2980b9
      height: h
      cursor: pointer

      color: white

      span
        display: block
        width: 100%
        height: 100%
        line-height: h
        text-align: center

  input.username
    font-size: 24px

    margin: 0
    padding: 0
    border: 0

    height: h
    line-height: h
    width: 100%

    background: #2980b9
    color: white
    text-align: center

  .add
    position: absolute
    height: h
    width: h
    z-index: 1000
    bottom: 0
    right: 0
    color: white
    text-align: center
    line-height: h
    cursor: pointer
    background: darken(blue, 10%)
